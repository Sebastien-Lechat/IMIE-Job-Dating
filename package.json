{
  "name": "server",
  "version": "0.0.1",
  "description": "Transcendent app with Mono",
  "private": true,
  "scripts": {
    "dev": "mono dev",
    "start": "cross-env NODE_ENV=production HOST=0.0.0.0 mono",
    "lint": "eslint src/ conf/ test/",
    "test": "npm run lint && nyc ava --verbose --serial --fail-fast test/ && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "nyc": {
    "include": [
      "src/"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "choco": "^0.2.1",
    "cors": "^2.8.5",
    "cross-env": "^5.1.1",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb-utils": "latest",
    "mono-core": "latest",
    "mono-doc": "latest",
    "mono-mongodb": "latest"
  },
  "devDependencies": {
    "mono-test-utils": "^1.2.3",
    "ava": "^0.25.0",
    "codecov": "^3.0.0",
    "eslint": "^4.13.1",
    "nyc": "^11.3.0"
  }
}
